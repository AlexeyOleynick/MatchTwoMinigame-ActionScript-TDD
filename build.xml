<?xml version="1.0"?><project name="Matcher" basedir="" default="build">	<property name="FLEX_HOME" location="D:\Software\FlexSDK\AIR_SDK_4.0"/>	<property name="mainclass" value="Matcher"/>	<property name="output" location="target"/>	<taskdef resource="flexTasks.tasks" classpath="${FLEX_HOME}/ant/lib/flexTasks.jar"/>	<target name="build">		<antcall target="prepare" />		<antcall target="release" />	</target>	<target name="prepare">		<echo>Clearing output folder: ${output}</echo>		<delete dir="${output}"/>		<mkdir dir="${output}"/>	</target>	<target name="release">		<echo>Flex SDK path: ${FLEX_HOME}</echo>		<echo>Compiling Release version: ${output}/${mainclass}.swf</echo>		<mxmlc file="src/${mainclass}.as"			output="target/${mainclass}.swf"			optimize="true"			static-link-runtime-shared-libraries="true"			debug="false"		>			<source-path path-element="src"/>			<compiler.library-path dir="lib" append="true">				<include name="*.swc"/>			</compiler.library-path>		</mxmlc>	</target></project>